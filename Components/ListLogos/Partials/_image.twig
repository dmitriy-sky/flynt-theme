<figure class="image">
  {% if not image.svg %}
    <img class="image-tag lazyload lazyload--fade"
      src="{{ image.src }}"
      srcset="{{ placeholderImage(380, 184) }}"
      data-srcset="
        {{ image.src }} 384w,
        {{ image.src }} 240w,
        {{ image.src }} 206w,
        {{ image.src }} 170w,
        {{ image.src }} 164w,
        {{ image.src }} 128w,
        {{ image.src }} 114w"
      data-sizes="auto"
      alt="{{ image.alt|e }}">
  {% else %}
    {{ image.svg }}
  {% endif %}
  {% if link.title and type == 'card' %}
    <figcaption class="caption">{{ link.title|e }}</figcaption>
  {% endif %}
</figure>
