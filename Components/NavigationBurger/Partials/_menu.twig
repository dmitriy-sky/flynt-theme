<ul class="menu">
  {% for item in items %}
  {% if item.children %}
  <li class="menu-item dropdown {{ item.classes|join(' ') }}">
    <a class="menu-link" href="{{ item.link }}" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
        aria-expanded="false">
        {{ item.title }}
        <a class="dropbtn" href="#"><i data-feather="chevron-down"></i></a>
    </a>
    <div class="dropdown-content">
      {% for child in item.children %}
        <a class="dropdown-item" href="{{ child.link }}">{{ child.title }}</a>
      {% endfor %}
    </div>
  </li>
  {% else %}
    <li class="menu-item {{ item.current ? 'menu-item--current' }} {{ item.classes|join(' ') }}">
      <a class="menu-link {{ item.classes|join(' ') }}" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noreferrer noopener"' }}>
        {{ item.title }}
      </a>
    </li>
    {% endif %}
    {% endfor %}

</ul>