{% if post.title == 'Home' %}
<nav is="flynt-navigation-main" class="flyntComponent">
    <div class="wrapper bg-dark">
    
        <div class="container width-30" style="justify-content:center;">
            <div class="left" style="margin-top:20px">
                <p><span style="background:#EB703B;padding:10px;border-radius:10px;">NEWS</span> <a
                        style="background:white;color:#324259;text-decoration:none;padding:10px;"
                        href="/interwork-alliance-launches-to-standardize-token-powered-ecosystems-worldwide/"
                        style="color:white;text-decoration:none;border-radius:10px;">IWA formally announces operations
                        <i data-feather="chevrons-right"></i></a></p>
            </div>

        </div>
    </div>
</nav>
{% endif %}

<nav is="flynt-navigation-main" class="flyntComponent">
    <div class="wrapper">
        <div class="container centerMaxWidthContainer social-icons">
            <ul class="menu social-icons">
                <li class="menu-item {{ item.current ? 'menu-item--current' }}">
                    Follow Us
                </li>
                <li class="menu-item {{ item.current ? 'menu-item--current' }}">
                    <a target="_blank" href="https://twitter.com/IntWorkAll">
                        <img class="social-icon" src="/wp-content/uploads/2020/05/twitter@2x.png" />
                    </a>
                </li>

                <li class="menu-item {{ item.current ? 'menu-item--current' }}">
                    <a target="_blank" href="https://www.linkedin.com/company/interwork-alliance/?viewAsMember=true">
                        <img class="social-icon" src="/wp-content/uploads/2020/05/linkedin@2x.png" />
                    </a>
                </li>
                <li class="menu-item {{ item.current ? 'menu-item--current' }}">
                    <a target="_blank" href="https://www.facebook.com/pg/InterWork-Alliance-107466464323698/about/?ref=page_internal">
                        <img class="social-icon" src="/wp-content/uploads/2020/05/facebook@2x.png" />
                    </a>
                </li>
            </ul>
        </div>
        <div class="container centerMaxWidthContainer">
            <a class="logo" href="{{ site.link }}">
                <img class="logo-image" src="/wp-content/uploads/2020/05/iwa-logo.png" alt="{{ logo.alt }}">
            </a>
            {% if menu %}
            <ul class="menu">

                {% for item in menu.items %}
                {% if item.children %}

                <li
                    class="menu-item dropdown {{ item.current_item_ancestor ? 'menu-item--current' }} {{ item.classes|join(' ') }}">

                    <a class="menu-link dropbtn {{ item.classes|join(' ') }}" href="{{ item.link }}"
                        id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ item.title }}
                    </a>
                    <div class="dropdown-content">
                        {% for child in item.children %}
                        <a class="dropdown-item {{ item.classes|join(' ') }}"
                            href="{{ child.link }}">{{ child.title|upper }}</a>
                        {% endfor %}
                    </div>
                </li>
                {% else %}
                <li class="menu-item {{ item.current ? 'menu-item--current' }}">
                    <a class="menu-link {{ item.classes|join(' ') }} " href="{{ item.link }}"
                        {{ item.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>{{ item.title }}</a>
                </li>
                {% endif %}
                {% endfor %}
            </ul>
            {% endif %}
        </div>
    </div>

</nav>